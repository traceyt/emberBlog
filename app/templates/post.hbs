{{#if isEditing}}
{{partial 'post/edit'}}
<button {{action 'doneEditing'}}>Done</button>
{{else}}
<button {{action 'edit'}}>Edit</button>
{{/if}}

<h1>{{model.title}}</h1>

<h2>by {{model.author.name}}</h2> <small class="muted">{{format-date model.date}}</small>

<p>{{format-markdown model.body}}</p>