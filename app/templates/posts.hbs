<h1>Posts</h1>

<div class="col-md-4">
<ul class="list-unstyled">
    {{#each post in this}}
    <li>
        {{#link-to 'post' post.id}}
        {{post.title}}
        <span class="muted">
            by {{post.author.name}}
        </span>
        {{/link-to}}
    </li>
    {{/each}}
</ul>
</div>

<div class="col-md-8">
    {{outlet}}
</div>